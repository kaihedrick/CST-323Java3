<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <property name="LOGGLY_TOKEN" value="fcb37a7c-eaaa-45a2-a91b-8a76a744ed60"/>
    
    <!-- Console Appender -->
    <appender name="Console" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Loggly HTTP Appender -->
    <appender name="Loggly" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="net.logstash.logback.encoder.LogstashEncoder">
            <customFields>{"appName":"topic4-3","environment":"production"}</customFields>
        </encoder>
    </appender>

    <!-- AOP Logging Configuration -->
    <logger name="com.gcu" level="TRACE" additivity="false">
        <appender-ref ref="Console" />
        <appender-ref ref="Loggly" />
    </logger>

    <!-- Spring Framework Logging -->
    <logger name="org.springframework" level="INFO" additivity="false">
        <appender-ref ref="Console" />
        <appender-ref ref="Loggly" />
    </logger>

    <root level="INFO">
        <appender-ref ref="Console" />
        <appender-ref ref="Loggly" />
    </root>
</configuration>
