<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <property name="LOGGLY_TOKEN" value="fcb37a7c-eaaa-45a2-a91b-8a76a744ed60"/>
    
    <!-- Use a proper comment format in XML -->
    <appender name="Console" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- HTTP appender for Loggly -->
    <appender name="LOGGLY" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="net.logstash.logback.encoder.LogstashEncoder">
            <customFields>{"appName":"topic4-3","environment":"production"}</customFields>
        </encoder>
    </appender>

    <!-- Configure loggers -->
    <logger name="com.gcu" level="TRACE" additivity="false">
        <appender-ref ref="Console" />
        <appender-ref ref="LOGGLY" />
    </logger>

    <root level="INFO">
        <appender-ref ref="Console" />
        <appender-ref ref="LOGGLY" />
    </root>
</configuration>
